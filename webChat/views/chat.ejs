<div class="wrap">
	<div class="container-fluid">
		<% posts.forEach(function(post, index){ %>
			<div class="row">
			<div class="span4">
				<h2><%= post.name %></h2>
				<p><%= post.content %></p>
			</div>
			</div>
		<%}) %>
	</div>
</div>

<div class="footer">
	<div class="container-fluid">
		<div class = "row">

			<form class="form-horizontal" method="post" action="">
				<fieldset>
				<textarea class="form-control" rows="5" name="chat_content" placeholder="Write a message here"></textarea>
				<div class="bottom-send-message"> 
					<button type="submit" class="btn button-send middle">Submit
					</button>
				</div>
				</fieldset>
			</form>
		</row>
	</div>
</div>
